{% extends 'base.html.twig' %}

{% block title %}Rankster{% endblock %}

{% block body %}
<div class="container">
    <h1>Rankster</h1>

    <div class="clearfix">
        <a href="{{ path('post_create') }}" class="btn btn-primary float-right">Add Post</a>
    </div>
    {% for post in posts %}
        <div class="shadow p-3 mt-3 bg-white rounded clearfix">
            <div class="float-left mr-4 text-center">
                <a href="{{ path('post_vote_up', {'post': post.id}) }}"><i class="fa fa-chevron-up" aria-hidden="true"></i></a><br>
                <span>{{ post.votesSum }}</span><br>
                <a href="{{ path('post_vote_down', {'post': post.id}) }}"><i class="fa fa-chevron-down" aria-hidden="true"></i></a>
            </div>
            <div class="float-left">
                <div>{{ post.createdAt|date }}</div>
                <div>{{ post.content }}</div>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}
